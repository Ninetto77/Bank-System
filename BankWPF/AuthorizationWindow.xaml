<Window x:Class="Lesson10.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Авторизация" 
        Height="645" 
        Width="875"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        FontSize="18"
        FontFamily="{DynamicResource MaterialDesignFont}"
        >

    <Grid Margin="20">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30"
                              ShadowDepth="1"
                              Opacity="0.4"
                              />
        </Grid.Effect>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Left Side-->
        <Border
        Background="#07bf96"
        CornerRadius="10 0 0 10"
        ClipToBounds="True"
>
            <Border.Clip>
                <RectangleGeometry Rect="0, 0,425, 605"
                                   RadiusX="10"
                                   RadiusY="10"/>
            </Border.Clip>

            <Grid>
                <!--Title-->
                <StackPanel Margin="0 120 0 0"
                        VerticalAlignment="Top">
                    <TextBlock
                    Text="Регистрация"
                    FontSize="46"
                    FontWeight="Light"
                    Foreground="White"
                    TextAlignment="Center"/>

                    <TextBlock
                    Text="Контролируй свои финансы"
                    FontWeight="Light"
                    FontSize="16"
                    Foreground="#d1f2eb"
                    TextAlignment="Center"
                    Margin="0 15 0 3"
                    />
                </StackPanel>
                <!--Elipses-->
                <Ellipse Width="500"
                     Height="500"
                     VerticalAlignment="Bottom"
                     Fill="#5eccb4"
                     Margin="50 0 0 -200"
                     Opacity="0.6"/>
                <Ellipse Width="300"
                     Height="300"
                     VerticalAlignment="Bottom"
                     Fill="#5bcbb3"
                     Margin="-450 0 0 30"
                     Opacity="0.3"/>
                <Ellipse Width="400"
                     Height="400"
                     VerticalAlignment="Bottom"
                     Fill="#5eccb4"
                     Margin="-320 0 0 -120"
                     Opacity="0.3"/>
                <Ellipse Width="250"
                     Height="250"
                     VerticalAlignment="Bottom"
                     Fill="#5bc9b2"
                     Margin="-380 0 0 -120"
                     />
                <Ellipse Width="400"
                     Height="400"
                     VerticalAlignment="Bottom"
                     Fill="#5eccb4"
                     Margin="280 0 0 -70"
                     Opacity="0.8"/>

                <!--Icon-->
                <Border Background="#fdfdfd"
                        CornerRadius="100"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Height="110"
                        Width="110"
                        Margin="0 0 0 80">
                    <Grid>
                        <!--Colored Ellipses-->
                        <Ellipse Width="100"
                                 Height="100"
                                StrokeThickness="4">
                            <Ellipse.Stroke>
                                <LinearGradientBrush>
                                    <GradientStop Color="#e27c53"
                                              Offset="0.15"/>
                                    <GradientStop Color="#dca530"
                                              Offset="0.2"/>
                                    <GradientStop Color="#8bb356"
                                              Offset="0.3"/>
                                    <GradientStop Color="#3bb799"
                                              Offset="0.4"/>
                                    <GradientStop Color="#67cbee"
                                              Offset="0.4"/>
                                    <GradientStop Color="#3699d1"
                                              Offset="0.2"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>

                        <!--Colored Tick Icon-->
                        <materialDesign:PackIcon Kind="Tick"
                                                 Width="70"
                                                 Height="70"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Center"
                                                 Margin="20,0,0,0"
                                                 >
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush StartPoint="0,1">
                                    <GradientStop Color="#e27c53"
                                              Offset="0.15"/>
                                    <GradientStop Color="#dca530"
                                              Offset="0.2"/>
                                    <GradientStop Color="#8bb356"
                                              Offset="0.3"/>
                                    <GradientStop Color="#3bb799"
                                              Offset="0.4"/>
                                    <GradientStop Color="#67cbee"
                                              Offset="0.4"/>
                                    <GradientStop Color="#3699d1"
                                              Offset="0.2"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>
                    </Grid>
                </Border>
                

                        
                
            </Grid>
        </Border>

        <!--Right Side-->
        <Border Grid.Column="1"
                        Background="White"
                        CornerRadius="0 10 0 0"
                        MouseDown="Border_MouseDown">

            <Grid>
                <!--Close Icon-->
                <StackPanel>
                <materialDesign:PackIcon Kind="Close"
                          Width="20"
                          Height="20"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Right"
                          Opacity="0.3"
                          Margin="0 13 14 0"
                          />
                    <Button
                          x:Name="CloseBtn"
                          Width="20"
                          Height="20"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Right"
                          Margin="0 -20 14 0"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    materialDesign:ButtonAssist.CornerRadius="22" />
                </StackPanel>

                <!--Inputs-->
                <StackPanel VerticalAlignment="Center"
                                    Margin="75 0">

                    <TextBox 
                                x:Name="LoginTextBox"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="User1"
                                materialDesign:HintAssist.Hint="Логин"
                                materialDesign:HintAssist.FloatingOffset="0 -20 "
                                BorderBrush="#c5c8cc"
                                BorderThickness="0 0 0 1.5"
                            />
                    <PasswordBox 
                                x:Name="PasswordTextBox"
                                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                Password="qwerty"
                                materialDesign:HintAssist.Hint="Пароль"
                                materialDesign:HintAssist.FloatingOffset="0 -18"
                                BorderBrush="#c5c8cc"
                                Margin="0 27"
                                BorderThickness="0 0 0 1.5"
                            />

                    <CheckBox
                                x:Name="WorkerCheckBox"
                                Margin="0 40 0 20" FontSize="13">
                        <TextBlock>
                                    <Run Foreground="#b6b6b6">Вы менеджер?</Run>
                        </TextBlock>
                    </CheckBox>

                    <StackPanel Orientation="Horizontal">
                        <Button
                                        x:Name="EnterBtn"
                                        Content="Войти" 
                                    Background="#05B790"
                                    Foreground="#ffff"
                                    FontSize="18"
                                    Width="120"
                                    Height="45"
                                    materialDesign:ButtonAssist.CornerRadius="22" />

                        <Button
                                        x:Name="RegisterBtn"
                                        Content="Залогиниться" 
                                    FontSize="16"
                                    Width="145"
                                    Height="45"
                                    Margin="5 0 0 0"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    materialDesign:ButtonAssist.CornerRadius="22" />

                    </StackPanel>
                </StackPanel>

            </Grid>
        </Border>

    </Grid>

</Window>
